<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Card" table="card" schema="ecobikerental">
        <id name="cardCode">
            <column name="cardCode" sql-type="char(16)" length="16"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="cvvCode">
            <column name="cvvCode" sql-type="varchar(6)" length="6"/>
        </property>
        <property name="expiration">
            <column name="expiration" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>