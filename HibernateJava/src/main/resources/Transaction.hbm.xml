<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Transaction" table="transaction" schema="ecobikerental">
        <id name="id">
            <column name="Id" sql-type="char(16)" length="16"/>
        </id>
        <property name="cardCode">
            <column name="cardCode" sql-type="char(16)" length="16" not-null="true"/>
        </property>
        <property name="invoiceId">
            <column name="invoiceId" sql-type="char(16)" length="16" not-null="true"/>
        </property>
        <property name="createdDate">
            <column name="createdDate" sql-type="datetime" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(200)" length="200" not-null="true"/>
        </property>
        <property name="amount">
            <column name="amount" sql-type="int" not-null="true"/>
        </property>
        <many-to-one name="cardByCardCode" class="entity.Card" insert="false" update="false">
            <column name="cardCode" not-null="true"/>
        </many-to-one>
        <many-to-one name="invoiceByInvoiceId" class="entity.Invoice" insert="false" update="false">
            <column name="invoiceId" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>